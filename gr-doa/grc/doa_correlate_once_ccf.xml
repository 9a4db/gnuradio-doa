<?xml version="1.0"?>
<block>
  <name>Correlate Once</name>
  <key>doa_correlate_once_ccf</key>
  <category>[doa]</category>
  <import>import doa</import>
  <make>doa.correlate_once_ccf($width, $median)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Vector Length</name>
    <key>width</key>
    <type>int</type>
  </param>
  <param>
    <name>Median</name>
    <key>median</key>
    <value>1</value>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in0</name>
    <type>complex</type>
    <vlen>$width</vlen>
  </sink>
  <sink>
    <name>in1</name>
    <type>complex</type>
    <vlen>$width</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>int</type>
  </source>
</block>
